<div class="row">
  <div class=" col-md-offset-4 col-md-4">
    <div class="thumbnail">
      <%= image_tag(@book.photo, class: 'img-responsive img-book') %>
      <div class="caption">
        <div class="row">
          <div class="col-md-12">
            <div class="show-group">
              <h4 class="text-center"><b><%= @book.title %></b></h4>
            </div>
            <div class="show-group">
              <strong>Editorial:</strong>
              <%= @book.editorial %>
            </div>
            <div class="show-group">
              <strong>Author:</strong>
              <%= @book.user.name %>
            </div>
            <% if can? :manage, @book %>
              <hr class="separator">
            <% end %>
          </div>
          <% if can? :manage, @book %>
            <div class="col-md-9">
              <p><i>Has click si deseas editar t√∫ libro</i></p>
              <%= link_to edit_book_path(@book), class: 'btn btn-warning btn-sm po-left' do  %>
                <span class="glyphicon glyphicon-edit"></span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <%= link_to 'Volver', books_path, class: 'btn btn-link btn-books' %>
  </div>
</div>

<p id="notice"><%= notice %></p>
    