<div class="row">
  <div class=" col-md-offset-4 col-md-4">
    <div class="thumbnail">
      <%= image_tag(@book.photo, class: 'img-responsive img-book') %>
      <div class="caption">
        <div class="row">
          <div class="col-md-7">
            <div class="show-group">
              <strong>Title:</strong>
              <%= @book.title %>
            </div>
            <div class="show-group">
              <strong>Editorial:</strong>
              <%= @book.editorial %>
            </div>
          </div>
          <div class="col-md-5">
            <% if can? :manage, @book %>
              <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-info btn-books' %>
            <% end %>
            <br>
            <br>
            <%= link_to 'Back', books_path, class: 'btn btn-warning btn-books' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>

<% if can? :create, Book %>
  <%= link_to 'New Book', new_book_path %>
<% end %>
